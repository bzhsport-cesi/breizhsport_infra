services:
  app:
    image: {{ image_name }}
    restart: always
    expose:
      - "3000"
    networks:
      - frontend_net

  nginx:
    image: nginx:latest
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./certs:/etc/letsencrypt:ro
      - ./certs-data:/var/lib/letsencrypt
    depends_on:
      - app
    networks:
      - frontend_net

networks:
  frontend_net: